# Database
DATABASE_URL="postgresql://user:password@localhost:5432/productivity_db"
TEST_DATABASE_URL="postgresql://postgres:postgres@localhost:5432/productivity_tool_test"
PRISMA_HIDE_UPDATE_MESSAGE=true
LOG_LEVEL=info
NODE_ENV=development

# Auth / Sessions
SESSION_SECRET=your-super-secret-session-key

# SMTP (Required for password reset + notifications)
# Example: SendGrid
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key
SMTP_FROM=no-reply@example.com
FROM_NAME=2Creative Productivity Tool
FROM_EMAIL=no-reply@example.com

# App URLs
# Used in password reset and welcome emails; required in production.
WEB_APP_URL=http://localhost:8910

# Welcome email flag (optional; set true to send on signup)
WELCOME_EMAIL_ENABLED=false

# Seed defaults (first-run admin + seeded users)
SEED_ADMIN_ENABLED=true
SEED_ADMIN_EMAIL=admin@example.com
SEED_ADMIN_PASSWORD=test_password
SEED_USER_PASSWORD=ChangeMe123!
